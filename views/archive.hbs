    <div class = "navBar">
      <div class = "navLeft">
        <img class = "icon" src="https://cdn.glitch.global/99f58a04-b8f9-41e2-8b09-27e789f37bd0/thumbnails%2FVuAcadLogo.png?1734534921321" alt = "iconOfSchool">
        <p class = "name">
          <a href = "/">Spill the Deej: the Unofficial Vu Academy Freedom Wall</a>
        </p>
      </div>
      <div class = "navRight">
        <div class = "groupNavP">
        <p class = "navP">
          <a href = "/mainPage"><span onclick="tutorial()">Confessions</span></a>
        </p>
        <p class = "navP">
          <a style = "text-decoration: underline" href = "/archive" >Archives</a>
        </p>
