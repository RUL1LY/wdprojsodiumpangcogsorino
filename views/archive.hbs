    <div class="modal modalCheckPswd">
      <div class="modalContent">
        <h2>
          Please enter the password.
        </h2>
        <input type = "text" class="password" placeholder = "Enter password.">
        <div class="buttonContainer">
          <button onclick="hideModal()">Cancel</button>
